<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App1.AddClientModalPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Surname" />
                <Entry x:Name="Surname" Text="{Binding Path=Surname, Mode=OneWayToSource}" />
            </StackLayout>
            <StackLayout>
                <Label Text="Initials" />
                <Entry x:Name="Initials" Text="{Binding Path=Initials, Mode=OneWayToSource}" />
            </StackLayout>
            <Button Clicked="Button_Clicked" Text="Add Client" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>